<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <StartupObject>Program</StartupObject>
    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>true</SelfContained>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Magick.NET-Q8-AnyCPU" Version="13.10.0" />
    <PackageReference Include="SkiaSharp" Version="2.88.8" />
    <PackageReference Include="xunit" Version="2.4.2" />
    <PackageReference Include="xunit.runner.visualstudio" Version="2.4.5">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.5.0" />
  </ItemGroup>

  <Target Name="CopyFilesToUlbFolder" AfterTargets="Publish">
    <PropertyGroup>
      <UlbFolder>c:\ulb\folderjpg\</UlbFolder>
    </PropertyGroup>
    <ItemGroup>
      <FileToCopy Include="$(PublishDir)folderjpg.exe" />
    </ItemGroup>
    <Message Text="Copiando folderjpg.exe a $(UlbFolder)" Importance="high" />
    <Copy SourceFiles="@(FileToCopy)" DestinationFolder="$(UlbFolder)" />
  </Target>

</Project>
